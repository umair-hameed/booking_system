<div class="container p-5 my-5">
  <div class="col-6 m-auto p-5 my-5">
    <h2 class="text-center">Sign Up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-horizontal' }) do |f| %>
      <% if resource.errors.any? %>
        <div class="alert alert-danger">
          <ul>
            <% resource.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group my-3">
        <%= f.label :name, class: 'form-label' %>
        <%= f.text_field :name, class: 'form-control', placeholder: 'Enter your name', value: resource.name %>
      </div>

      <div class="form-group my-3">
        <%= f.label :role, class: 'form-label' %>
        <%= f.select :role, User.roles.keys.map { |r| [r.humanize, r] }, {}, class: 'form-control' %>
      </div>

      <div class="form-group my-3">
        <%= f.label :email, class: 'form-label' %>
        <%= f.email_field :email, class: 'form-control', placeholder: 'Enter your email', value: resource.email %>
      </div>

      <div class="form-group my-3">
        <%= f.label :password, class: 'form-label' %>
        <%= f.password_field :password, class: 'form-control', placeholder: 'Enter your password' %>
      </div>

      <div class="form-group my-3">
        <%= f.label :password_confirmation, class: 'form-label' %>
        <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Confirm your password' %>
      </div>

      <div class="form-group text-center my-4">
        <%= f.submit 'Sign Up', class: 'btn btn-primary' %>
      </div>

    <% end %>

    <div class="text-center mt-3">
      <p>Already have an account? <%= link_to 'Log in', new_session_path(resource_name) %></p>
    </div>
  </div>
</div>
