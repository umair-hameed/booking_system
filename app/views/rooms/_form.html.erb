<%= form_with(model: @room, local: true, class: "p-4 shadow rounded bg-white") do |f| %>
  <% if @room.errors.any? %>
    <div class="alert alert-danger">
      <h5><%= pluralize(@room.errors.count, "error") %> prohibited this room from being saved:</h5>
      <ul>
        <% @room.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :name, class: "form-label" %>
    <%= f.text_field :name, class: "form-control", placeholder: "Room name" %>
  </div>

  <div class="mb-3">
    <%= f.label :capacity, class: "form-label" %>
    <%= f.number_field :capacity, class: "form-control", min: 1, placeholder: "Capacity" %>
  </div>

  <div class="mb-3">
    <%= f.label :price_per_hour, class: "form-label" %>
    <%= f.number_field :price_per_hour, step: 0.01, min: 0, class: "form-control", placeholder: "Hourly price" %>
  </div>

  <div class="form-check mb-4">
    <%= f.check_box :active, class: "form-check-input" %>
    <%= f.label :active, class: "form-check-label" %>
  </div>

  <div class="text-center">
    <%= f.submit class: "btn btn-primary px-4" %>
  </div>
<% end %>
